<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:layoutDirection="ltr">

    <TextView
        android:id="@+id/RemetenteTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remetente:"
        android:textStyle="bold"
        android:layout_alignParentEnd="true"
        />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:background="@drawable/mensagem_box"
        android:layout_below="@id/RemetenteTextView"
        android:layout_alignParentEnd="true"
        > <!-- Defina o atributo layout_below para que fique abaixo do RemetenteTextView -->

        <TextView
            android:id="@+id/mensagemTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ConteÃºdo da mensagem"
            />
    </FrameLayout>
</RelativeLayout>
